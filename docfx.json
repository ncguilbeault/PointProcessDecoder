{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "output": "_api",
      "properties": {
        "ProduceReferenceAssembly": "true"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "assets/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "PointProcessDecoder",
      "_appTitle": "PointProcessDecoder",
      "_enableSearch": true,
      "_disableNav": false,
      "_disableBreadcrumb": true,
      "pdf": false
    }
  }
}